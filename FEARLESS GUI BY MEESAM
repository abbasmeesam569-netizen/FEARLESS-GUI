-- FEARLESS GUI (paged version)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")

-- remove previous copy
do
    local x = PlayerGui:FindFirstChild("FEARLESS_GUI")
    if x then x:Destroy() end
end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FEARLESS_GUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.Parent = PlayerGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 280)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -140)
MainFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60) -- lighter background
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 16)

-- RGB effect
spawn(function()
    while true do
        local r = (math.sin(tick())/2 + 0.5) * 80 + 60
        local g = (math.sin(tick()+2)/2 + 0.5) * 80 + 60
        local b = (math.sin(tick()+4)/2 + 0.5) * 80 + 60
        MainFrame.BackgroundColor3 = Color3.fromRGB(r,g,b)
        RunService.RenderStepped:Wait()
    end
end)

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -40, 0, 34)
Title.Position = UDim2.new(0, 10, 0, 6)
Title.BackgroundTransparency = 1
Title.Text = "FEARLESS GUI"
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 22
Title.Parent = MainFrame

local Credit = Instance.new("TextLabel")
Credit.Size = UDim2.new(1, -40, 0, 20)
Credit.Position = UDim2.new(0, 10, 0, 36)
Credit.BackgroundTransparency = 1
Credit.Text = "Made by @synkixr"
Credit.TextColor3 = Color3.fromRGB(200, 200, 200)
Credit.Font = Enum.Font.Gotham
Credit.TextSize = 14
Credit.Parent = MainFrame

local CloseBtn = Instance.new("TextButton")
CloseBtn.Size = UDim2.new(0, 30, 0, 30)
CloseBtn.Position = UDim2.new(1, -35, 0, 5)
CloseBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseBtn.TextColor3 = Color3.new(1, 1, 1)
CloseBtn.Text = "-"
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 18
CloseBtn.Parent = MainFrame
Instance.new("UICorner", CloseBtn).CornerRadius = UDim.new(0, 10)

-- Button creator
local function makeBtn(text, y, cb)
    local b = Instance.new("TextButton")
    b.Size = UDim2.new(0.8, 0, 0, 40)
    b.Position = UDim2.new(0.1, 0, y, 0)
    b.BackgroundColor3 = Color3.fromRGB(200, 60, 60) -- brighter red
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 18
    b.Text = text
    b.Parent = MainFrame
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 10)
    if cb then b.MouseButton1Click:Connect(cb) end
    return b
end

-- Pages
local pages = {}
local currentPage = 1

-- Page 1 buttons
pages[1] = {
    makeBtn("FLY", 0.2, function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
    end),
    makeBtn("FLING", 0.36, function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/0Ben1/fe/main/obf_rf6iQURzu1fqrytcnLBAvW34C9N55kS9g9G3CKz086rC47M6632sEd4ZZYB0AYgV.lua.txt"))()
    end),
    makeBtn("ORBIT PART", 0.52, function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/chesslovers69/Super-ring-parts-v6/refs/heads/main/Bylukaslol"))()
    end),
    makeBtn("ADMIN'S GUI", 0.68, function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/yofriendfromschool1/Sky-Hub/main/FE%20Trolling%20GUI.luau"))()
    end),
    makeBtn("BLACK HOLE", 0.84, function()
        loadstring(game:HttpGet("https://pastebin.com/raw/Ax87RCd5"))()
    end)
}

-- Page 2 buttons
pages[2] = {
    makeBtn("NAMELESS ADMIN", 0.2, function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FilteringEnabled/NamelessAdmin/main/Source"))()
    end),
    makeBtn("SOON", 0.36),
    makeBtn("SOON", 0.52),
    makeBtn("SOON", 0.68),
    makeBtn("SOON", 0.84)
}

-- Hide pages except first
for _, page in pairs(pages[2]) do page.Visible = false end

-- Arrows
local LeftArrow = Instance.new("TextButton")
LeftArrow.Size = UDim2.new(0, 40, 0, 30)
LeftArrow.Position = UDim2.new(0.05, 0, 0.92, 0)
LeftArrow.BackgroundColor3 = Color3.fromRGB(200, 40, 40)
LeftArrow.TextColor3 = Color3.new(1, 1, 1)
LeftArrow.Text = "<"
LeftArrow.Font = Enum.Font.GothamBold
LeftArrow.TextSize = 18
LeftArrow.Parent = MainFrame
Instance.new("UICorner", LeftArrow).CornerRadius = UDim.new(0, 8)

local RightArrow = Instance.new("TextButton")
RightArrow.Size = UDim2.new(0, 40, 0, 30)
RightArrow.Position = UDim2.new(0.85, 0, 0.92, 0)
RightArrow.BackgroundColor3 = Color3.fromRGB(200, 40, 40)
RightArrow.TextColor3 = Color3.new(1, 1, 1)
RightArrow.Text = ">"
RightArrow.Font = Enum.Font.GothamBold
RightArrow.TextSize = 18
RightArrow.Parent = MainFrame
Instance.new("UICorner", RightArrow).CornerRadius = UDim.new(0, 8)

-- Page switching
local function switchPage(pageNum)
    for _, btn in pairs(pages[currentPage]) do btn.Visible = false end
    for _, btn in pairs(pages[pageNum]) do btn.Visible = true end
    currentPage = pageNum
end

LeftArrow.MouseButton1Click:Connect(function()
    if currentPage > 1 then switchPage(currentPage - 1) end
end)

RightArrow.MouseButton1Click:Connect(function()
    if currentPage < #pages then switchPage(currentPage + 1) end
end)

-- Close & toggle
CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Name = "FEARLESS_Toggle"
ToggleBtn.Size = UDim2.new(0, 44, 0, 44)
ToggleBtn.Position = UDim2.new(0, 10, 0, 10)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleBtn.Text = "GUI"
ToggleBtn.TextColor3 = Color3.new(1, 1, 1)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 14
ToggleBtn.Parent = ScreenGui
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(1, 0)

ToggleBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

-- Dragging
local UIS = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos
local function update(input)
    local d = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + d.X, startPos.Y.Scale, startPos.Y.Offset + d.Y)
end
MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)
UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)
