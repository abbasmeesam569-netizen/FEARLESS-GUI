-- RGB effect (kept as your version but left as-is)
spawn(function()
    while true do
        local r = (math.sin(tick())/2 + 0.5) * 80 + 60
        local g = (math.sin(tick()+2)/2 + 0.5) * 80 + 60
        local b = (math.sin(tick()+4)/2 + 0.5) * 80 + 60
        MainFrame.BackgroundColor3 = Color3.fromRGB(r,g,b)
        RunService.RenderStepped:Wait()
    end
end)

