-- Page switching: same logic
local function switchPage(pageNum)
    if pageNum < 1 or pageNum > #pages then return end
    for _, btn in pairs(pages[currentPage]) do btn.Visible = false end
    for _, btn in pairs(pages[pageNum]) do btn.Visible = true end
    currentPage = pageNum
end

LeftArrow.MouseButton1Click:Connect(function()
    if currentPage > 1 then switchPage(currentPage - 1) end
end)

RightArrow.MouseButton1Click:Connect(function()
    if currentPage < #pages then switchPage(currentPage + 1) end
end)

-- Close & Toggle (unchanged)
CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Name = "FEARLESS_Toggle"
ToggleBtn.Size = UDim2.new(0, 44, 0, 44)
ToggleBtn.Position = UDim2.new(0, 10, 0, 10)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleBtn.Text = "GUI"
ToggleBtn.TextColor3 = Color3.new(1, 1, 1)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 14
ToggleBtn.Parent = ScreenGui
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(1, 0)

ToggleBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

-- Dragging (unchanged)
local dragging, dragInput, dragStart, startPos
local function update(input)
    local d = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + d.X, startPos.Y.Scale, startPos.Y.Offset + d.Y)
end
MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)
UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)

-- KEEP the brighter HSV RGB background loop if you want (kept from your version)
local hue = 0
RunService.RenderStepped:Connect(function()
    hue = (hue + 0.003) % 1
    MainFrame.BackgroundColor3 = Color3.fromHSV(hue, 0.75, 1)
end)
