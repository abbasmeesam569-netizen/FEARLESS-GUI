-- makeBtn: SMALL, NARROW, and kept centered at same X to preserve look
-- ONLY sizing/spacing changes are here (width -> 0.50, height -> 32)
local function makeBtn(text, y, cb)
    local b = Instance.new("TextButton")
    b.Size = UDim2.new(0.50, 0, 0, 32)  -- changed: slightly narrower and shorter for spacing
    b.Position = UDim2.new(0.35, 0, y, 0)
    b.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 16
    b.Text = text
    b.Parent = MainFrame
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    if cb then b.MouseButton1Click:Connect(cb) end
    return b
end

